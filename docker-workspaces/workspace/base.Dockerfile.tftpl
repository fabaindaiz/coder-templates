# syntax=docker/dockerfile:1

# Single stage build
FROM ${image}:latest

SHELL ["/bin/bash", "-c"]
ENV DEBIAN_FRONTEND=noninteractive \
    LANG=en_US.UTF-8

USER root

RUN apt-get update \
 && apt-get -y install \
      curl \
      git \
      locales \
      man \
      sudo \
      vim

RUN if [ id ${user} &>/dev/null ]; then \
      usermod ${user} \
        --shell=/bin/bash \
        --uid=1000; \
    else \
      useradd ${user} \
        --create-home \
        --user-group \
        --shell=/bin/bash \
        --uid=1000; \
    fi \
 && echo "${user} ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers.d/${user} \
 && chmod 0440 /etc/sudoers.d/${user}

USER ${user}
%{ if script != "" }
RUN ${script}
%{ endif }

WORKDIR /home/${user}